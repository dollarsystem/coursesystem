<Frame name="frame" title="教务系统-学生" visible="true" close="exit" layout="border" center="true" size="850,740">
	<Panel place="north" bgcolor="#00ffffff">
		<Label icon="outer,res/image/Header.png"/>
	</Panel>
	<ScrollPane place="center" vertical="needed">
		<TabbedPane name="tabbed" tabPlace="top">
			<Panel title=" 我 的 课 程 " layout="border">
				<ScrollPane place="center" vertical="needed">
					<Table name="my_class_table" columns=" 星 期 , 时 间 , 地 点 , 课  程 ">
					</Table>
				</ScrollPane>
				<Panel place="south" layout="flow,right">
					<Button name="my_class_detail" text=" 详 情 " enable="false"/>
					<Button name="my_class_quit" text=" 退 选 " enable="false"/>
				</Panel>
			</Panel>
			<Panel title=" 全 校 课 程 " layout="border">
				<Panel place="north">
					<Label text=" 学 期:"/>
					<ComboBox name="term_combo">
						<Option text="2013-2014年第一学期"/>
						<Option text="2012-2013年第二学期"/>
						<Option text="2012-2013年第一学期"/>
						<Option text="2011-2012年第二学期"/>
					</ComboBox>
					<Label text=" 年 级:"/>
					<ComboBox name="grade_combo">
						<Option text="2013"/>
						<Option text="2012"/>
						<Option text="2011"/>
						<Option text="2010"/>
						<Option text="2009"/>
						<Option text="2008"/>
						<Option text="2007"/>
					</ComboBox>
					<Label text=" 专 业:"/>
					<ComboBox name="faculty_combo">
						<Option text="软件学院"/>
						<Option text="数学系"/>
						<Option text="医学院"/>
						<Option text="历史学院"/>
						<Option text="物理系"/>
						<Option text="化学化工学院"/>
						<Option text="生命科学院"/>
					</ComboBox>
					<Button text=" 查 询 " name="search" />
				</Panel>
				<ScrollPane place="center" vertical="needed">
					<Table name="all_class_table" columns=" 课 程 编 号 , 课 程 名 称, 任 课 教 师 , 课 程 类 型 , 开 课 院 系 , 学 分 ">
					</Table>
				</ScrollPane>
				<Panel place="south" layout="flow,right">
					<Button name="all_class_detail" text=" 详 情 "/>
					<Button name="select" text=" 选 课 "/>
				</Panel>
			</Panel>
			<Panel title=" 个 人 资 料 " layout="border">
				<ScrollPane place="center" vertical="needed" >
					<Panel layout="border">
						<Panel place = "center" layout="grid,10,3">
							<Panel layout="flow,center"><Label text=" 学 号 "/></Panel><Panel layout="flow,center"><Label name="info_id"/></Panel><Label/>
							<Panel layout="flow,center"><Label text=" 姓 名 "/></Panel><Panel layout="flow,center"><Label name="info_name"/></Panel><Label/>
							<Panel layout="flow,center"><Label text=" 性 别 "/></Panel><Panel layout="flow,center"><Label name="info_sex"/></Panel><Label/>
							<Panel layout="flow,center"><Label text=" 学 院 "/></Panel><Panel layout="flow,center"><Label name="info_faculty"/></Panel><Panel layout="flow,center"><Button id="detail_faculty" text=" 详 情 "/></Panel>
							<Panel layout="flow,center"><Label text=" 年 级 "/></Panel><Panel layout="flow,center"><Label name="info_grade"/></Panel><Label/>
							<Panel layout="flow,center"><Label text=" 邮 箱 "/></Panel><Panel layout="flow,center"><Label name="info_mailbox"/></Panel><Panel layout="flow,center"><Button id="change_email" text=" 修 改 "/></Panel>
							<Panel layout="flow,center"><Label text=" 密 码 "/></Panel><Panel layout="flow,center"><Label name="info_password"/></Panel><Panel layout="flow,center"><Button id="change_password" text=" 修 改 "/></Panel>
						</Panel>
					</Panel>
				</ScrollPane>
			</Panel>
			<Panel title=" 我 的 成 绩 " layout="border">
				<Panel place="north" name="progress">
				</Panel>
				<ScrollPane place="center" vertical="needed">
					<Table name="score_table" columns=" 学 期 , 课 程 编 号 , 课 程 名 , 学 分 , 学 期 总 评 ">
					</Table>
				</ScrollPane>
			</Panel>
			<Panel title=" 最 近 通 知 " layout="border">
				<ScrollPane place="center" vertical="needed">
					<Table name="notice_table" columns=" 发 送 时 间 , 发 件 人 , 收 件 人 , 内 容 摘 要 ">
					</Table>
				</ScrollPane>
				<Panel place="south" layout="flow,right">
					<Button name="read_notice" text=" 查 看 "/>
					<Button name="new_notice" text=" 发 布 "/>
				</Panel>
			</Panel>
		</TabbedPane>
	</ScrollPane>
	<Panel place="south" layout="flow,left">
		<Label text="最后一次操作："></Label>
		<Label name="last_opt" text="暂无操作..."></Label>
	</Panel>
</Frame>
